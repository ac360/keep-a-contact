<!DOCTYPE html>
<html>
<head>
  <title>Keep-A-Contact â€“ Save Your Contacts, Manage Your Relationships</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= google_webfonts_link_tag "Open Sans" => [400, 700] %>
</head>
<body>

	<div class="container">

		<div class="row">
		   	<div class="col-offset-1 col-lg-5" style="margin-top:5px;">
		   		<% if flash[:notice] %>
		   			<p class="alert alert-success s-no-margin"><%= notice %></p>
		   		<% end %>
		   		<% if flash[:alert] %>
	       			<p class="alert alert-danger s-no-margin"><%= alert %></p>
	       		<% end %>
	       	</div>
		</div>

		<div class="row">
		   	<div class="col-offset-2 col-lg-8">
		   		<div class="row">
					<div id="header-container" class="col-lg-12">
						<div class="row">
							<div class="col-lg-6">
								<% if user_signed_in? %>
									<ul class="list-unstyled">
									  	<li>
									  		<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
									 	 </li>
								    </ul>
								<% end %>
							</div>
							<div class="col-lg-6">
								<a id="user-account-link" class="pull-right k-no-margin k-white k-font"><i class="icon-caret-down"></i> <%= current_user.name %></a>
							</div>
						</div>	
					</div>
				</div>

				<%= yield %>

			</div>
		</div>
		
	</div>

</body>
</html>
